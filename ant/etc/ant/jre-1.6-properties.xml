<project name="openmdx-jre-1.6-properties">

	<property name="build.target.platform" value="jre-1.6"/>
	<property name="build.target.version" value="1.6"/>

	<property name="model.build.formats" value="--format=xmi1 --format=jmi1 --format=cci2 --format=jpa3 "/>

	<condition property="build.target.jre" value="${java.home}">
		<equals arg1="${java.specification.version}" arg2="${build.target.version}"/>
	</condition>
	<property name="build.target.jre" value="${env.JRE_16}"/>

	<condition property="build.exclude.platform">
		<not>
			<available file="${openmdx.home}/java2/jre-1.6/extension/lib" type="dir"/>
		</not>
	</condition>

	<patternset id="build.exclude">
		<exclude name="**/jre/before1_3/**"/>
		<exclude name="**/jre/before1_4/**"/>
		<exclude name="**/jre/before1_5/**"/>
		<exclude name="**/jre/before1_6/**"/>
		<exclude name="org/openmdx/uses/org/apache/regexp/**"/>
		<exclude name="${project.build.exclude.1}" if="project.build.exclude.1"/>
		<exclude name="${project.build.exclude.2}" if="project.build.exclude.2"/>
		<exclude name="${project.build.exclude.3}" if="project.build.exclude.3"/>
		<exclude name="${project.build.exclude.4}" if="project.build.exclude.4"/>
		<exclude name="${project.build.exclude.5}" if="project.build.exclude.5"/>
		<exclude name="${project.build.exclude.6}" if="project.build.exclude.6"/>
		<exclude name="${project.build.exclude.7}" if="project.build.exclude.7"/>
		<exclude name="${project.build.exclude.8}" if="project.build.exclude.8"/>
		<exclude name="${project.build.exclude.9}" if="project.build.exclude.9"/>
		<exclude name="${project.build.exclude.10}" if="project.build.exclude.10"/>
		<exclude name="${project.build.exclude.11}" if="project.build.exclude.11"/>
		<exclude name="${project.build.exclude.12}" if="project.build.exclude.12"/>
		<exclude name="${project.build.exclude.13}" if="project.build.exclude.13"/>
		<exclude name="${project.build.exclude.14}" if="project.build.exclude.14"/>
		<exclude name="${project.build.exclude.15}" if="project.build.exclude.15"/>
		<exclude name="${project.build.exclude.16}" if="project.build.exclude.16"/>
	</patternset>

	<path id="java2.endorsed.lib">
		<pathelement location="${openmdx.home}/java2/jre-1.5/endorsed/lib/jaxp-api.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/endorsed/lib/jaxp-ri.jar"/>
	</path>
	<path id="java2.extension.lib">
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/commons-collections-extendedproperties.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/junit.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/xmlunit.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/bp-ui-14.jar"/>		
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/bp-ui-5.jar"/>		
		<pathelement location="${openmdx.home}/java2/jre-1.5/extension/lib/jcl104-over-slf4j.jar"/>		
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/jdo2-api.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.3/extension/lib/openjpa.jar"/>		
	</path>
	<path id="java2.standard.lib">
		<pathelement location="${build.target.jre}/lib/jce.jar"/>
		<pathelement location="${build.target.jre}/lib/jsse.jar"/>
	</path>
	<path id="java2.enterprise.api">
		<pathelement location="${openmdx.home}/java2/jre-1.5/enterprise/lib/javaee.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/enterprise/lib/el-api.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/enterprise/lib/jsf-api.jar"/>
		<pathelement location="${openmdx.home}/java2/jre-1.5/enterprise/lib/mailapi.jar"/>
	</path>
	<path id="java2.enterprise.lib">
		<path refid="java2.enterprise.api"/>
		<path refid="java2.standard.lib"/>
	</path>
	<path id="openjpa.ant.lib">
		<path refid="java2.extension.lib"/>
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/log4j-over-slf4j.jar"/>
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/serp.jar"/>		
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/commons-lang.jar"/>		
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/commons-collections.jar"/>		
		<pathelement location="${openmdx.home}/java2/${build.java.platform}/extension/lib/openjpa.jar"/>
		<pathelement location="${openmdx.home}/jre-1.5/ant/lib/openmdx-ant.jar"/>
	</path>
	<path id="openjpa.ant.bin">
		<path refid="openjpa.ant.lib"/>
		<path refid="project.bin.classpath"/>
	</path>
	
	<path id="openmdx.core.lib">
		<pathelement location="${openmdx.home}/jre-1.6/core/lib/openmdx-kernel.jar"/>
		<pathelement location="${openmdx.home}/jre-1.6/core/lib/openmdx-base.jar"/>
		<pathelement location="${openmdx.home}/jre-1.6/core/lib/openmdx-application.jar"/>
		<pathelement location="${openmdx.home}/jre-1.6/core/lib/slf4j-openmdx1.jar"/>
	</path>
	<path id="microsoft.sql-server.lib">
		<pathelement location="${openmdx.home}/opt/microsoft/jre-1.4/sql-server-2005/lib/sqljdbc.jar"/>
	</path>
	<path id="oracle.jdbc.lib">
		<pathelement location="${openmdx.home}/opt/oracle/jre-1.5/oracle-10/lib/ojdbc14.jar"/>
		<pathelement location="${openmdx.home}/opt/oracle/jre-1.5/oracle-10/lib/orai18n.jar"/>
	</path>

	<path id="openmdx.bootstrap.bin">
	    <path refid="java2.enterprise.lib"/>
	    <path refid="java2.extension.lib"/>
	    <pathelement location="${openmdx.home}/core/src/resource"/>
		<pathelement location="${openmdx.home}/core/build/jre-1.6/src/resource"/>
		<pathelement location="${openmdx.home}/core/build/jre-1.6/bin"/>
	</path>
	<path id="openmdx.core.bin">
	    <path refid="openmdx.bootstrap.bin"/>
		<pathelement location="${openmdx.home}/core/build/jre-1.6/model/openmdx-core.openmdx-xmi.zip"/>
	</path>

</project>
