						<active>true</active>
						<spanRow>2</spanRow>
						<multiplicity>3</multiplicity>
						<toolTip>
							<_item>Address line(s)</_item>
						</toolTip>
						<label>
							<_item>Address line(s)</_item>
						</label>
						<orderFieldGroup>
							<_item>0</_item>
							<_item>0</_item>
							<_item>10</_item>
						</orderFieldGroup>
						<orderObjectContainer>
							<_item>0</_item>
							<_item>0</_item>
							<_item>18</_item>
						</orderObjectContainer>
					</_object>
					<_content/>
				</org.openmdx.ui1.ElementDefinition>      

      
