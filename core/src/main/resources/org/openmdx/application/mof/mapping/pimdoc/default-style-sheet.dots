// ------------------
// Graphviz Elements
// ------------------
graph[
	splines="ortho"
	fontname="Arial"
	fontsize="12px"
	nodesep="1"
]
node[
	shape="record"
	style="filled"
	color="#A52A2A"
	fontname="Arial"
	fontsize="10px"
]
edge[
	arrowhead="empty"
	color="#A52A2A"
	fontname="Arial"
	fontsize="10px"
]

// ------------------
// UML Classes
// ------------------
.uml_class[
]
.uml_alias[
]
.uml_note[
  shape="record"
  style="filled"
  fillcolor="#D8F2FA"
  color="#063e4f",
  fontname="Arial"
  fontsize="8px"
]
.uml_association[
  constraint="true"
]
.uml_cluster[
	fillcolor="lightcyan"
]
.uml_composite_aggregation[
	minlen="3"	
]
.uml_exception[
]
.uml_field[
]
.uml_instance_of[
]
.uml_note_link[
  minlen="1"
  style="dashed"
  color="#063e4f"

]
.uml_package[
	fillcolor="gold"
]
.uml_primitive[]
.uml_shared_aggregation[
	minlen="3"
]
.uml_structure[
]

// ------------------
// Diagram Classes
// ------------------
.declared_class[
 	compartments="true"
 	width="3"
	fillcolor="#FFFFCB"
]
.declared_alias[
 	compartments="true"
 	width="3"
	fillcolor="sandybrown"
]
.declared_exception[
 	compartments="true"
 	width="3"
 	fillcolor="orange1"
]
.declared_primitive[
 	compartments="true"
 	width="3"
 	fillcolor="powderblue"
]
.declared_structure[
 	compartments="true" 
 	width="3"
 	fillcolor="olivedrab1"
]
.imported_class[
	compartments="false"
	fillcolor="lightsalmon"
]
.imported_alias[
	compartments="false"
	fillcolor="lightsalmon"
]
.imported_exception[
	compartments="false"
	fillcolor="lightsalmon"
]
.imported_primitive[
	compartments="false"
	fillcolor="lightsalmon"
]
.uml_imported_structure[
	compartments="false"
	fillcolor="lightsalmon"
]


// ------------------
// Custom Classes
// ------------------
.detailed_class[
 	compartments="true" 
	fillcolor="lightsalmon"
 	width="3"
]
